<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".features.social.view.SocialActivity">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_225sdp"
            android:src="@drawable/ic_welcoming_vector" />



        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="@dimen/_20sdp"
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_28sdp"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_margin="0dp"
                android:padding="0dp"
                android:id="@+id/input_user_email"
                android:fontFamily="@font/cairo"
                android:layout_width="match_parent"
                android:hint="@string/example_example_com"
                android:inputType="textEmailAddress"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_11sdp"
            android:layout_marginHorizontal="@dimen/_28sdp"
            android:hint="@string/password"
            app:passwordToggleEnabled="true"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_margin="0dp"
                android:padding="0dp"
                android:id="@+id/inputPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/cairo"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/button_next_email_registeration"
            android:fontFamily="@font/cairo"
            android:layout_marginTop="@dimen/_32sdp"
            android:layout_width="@dimen/_148sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            />



        <ImageButton
            android:layout_marginHorizontal="@dimen/_55sdp"
            android:id="@+id/button_fb"
            android:layout_width="match_parent"
            android:fontFamily="@font/cairo"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_24sdp"
            android:background="@mipmap/fb"
            tools:targetApi="lollipop" />

        <ImageButton
            android:layout_marginHorizontal="@dimen/_55sdp"
            android:id="@+id/button_google"
            android:layout_width="match_parent"
            android:fontFamily="@font/cairo"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_6sdp"
            android:background="@mipmap/google"
            tools:targetApi="lollipop" />

    </LinearLayout>
</layout>