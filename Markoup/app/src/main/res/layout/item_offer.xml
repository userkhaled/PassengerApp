<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/item_view"
        style="@style/adapter_clickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_18sdp"
        >

        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_215sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/_4sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="sans-serif"
                            android:text="Available Seat" />

                        <ImageView
                            android:layout_width="@dimen/_140sdp"
                            android:layout_height="@dimen/_105sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/saet_car" />

                        <TextView
                            android:id="@+id/empty_set"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="sans-serif-black"
                            android:text="5 Seats Available" />

                    </LinearLayout>

                    <View
                        android:layout_width="0.7dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="32dp"
                        android:background="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_dri_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:text="Khalid Al Gandoury" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_dri_logo"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:layout_margin="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_mr_khalid"
                            app:civ_border_color="@color/colorBorder"
                            app:civ_border_width="@dimen/_1sdp" />

                        <RatingBar
                            android:id="@+id/rb_dri_Rate"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:progressTint="@color/yellow"
                            android:rating="2.5" />

                        <TextView
                            android:id="@+id/tv_Viechle_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Viechle type : Mercedes"
                            android:textSize="@dimen/_8sdp" />

                        <Button
                            android:insetBottom="0dp"
                            android:insetTop="0dp"
                            android:id="@+id/btn_book"
                            style="@style/adapter_clickable"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:fontFamily="@font/source_sans_pro_bold"
                            android:text="@string/book_now" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/_8sdp"
                        android:maxLines="1"
                        android:drawableStart="@drawable/ic_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairo"
                        android:text="@string/trip_date"
                        android:drawableLeft="@drawable/ic_time" />



                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>