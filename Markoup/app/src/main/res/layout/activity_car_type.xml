<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".CarTypeActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_225sdp"
            android:src="@drawable/ic_welcoming_vector" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/cairo"
            android:text="@string/select_vehicle_type"
            android:textColor="@color/colorPrimary" />

        <LinearLayout
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:orientation="horizontal">

<!--            <Spinner-->
<!--                android:id="@+id/spinner_car"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:entries="@array/cars" />-->
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/cairo"
            android:text="@string/select_vehicle_type"
            android:textColor="@color/colorPrimary" />

        <LinearLayout
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:orientation="horizontal">

          <!--  <Spinner
                android:id="@+id/spinner_set"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/cars" />-->
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_26sdp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_margin="0dp"
                android:padding="0dp"
                android:id="@+id/input_telephone_number_registeration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/cairo"
                android:inputType="phone"
                android:hint="@string/enter_vehicle_number"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorBorder" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/button_next_email_registeration"
            android:fontFamily="@font/cairo"
            android:layout_marginTop="@dimen/_23sdp"
            android:layout_width="@dimen/_168sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            tools:targetApi="lollipop" />

    </LinearLayout>
</layout>